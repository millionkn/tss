{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ESNext",
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
}