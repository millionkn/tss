{
	"compilerOptions": {
		"target": "es2017",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		// "declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"alwaysStrict": true,
		"skipLibCheck": true,
		"rootDir": "./src/",
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
		"lib": [
			"ESNext",
		],
		"types": [
			"node"
		],
		"paths": {
			"@src/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
	],
}